<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_chainsaw_man" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC0D0D0D" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mangaCover"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bg_chainsaw_man" />

            <TextView
                android:id="@+id/mangaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:text="Boruto: Two Blue Vortex"
                android:textColor="#F2F2F2"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSynopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sinopse"
                android:textColor="#F2F2F2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sinopseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lorem Ipsum is simply dummy text..."
                android:textColor="#F2F2F2"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonStartReading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#E53935"
                android:text="Iniciar Leitura"
                android:textColor="#FFF" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
