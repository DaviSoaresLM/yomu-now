<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLeitura"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MangaChapterActivity"
    android:background="#121212">

    <!-- Fundo do leitor -->
    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:clickable="false" />

    <!-- Escurecimento leve no fundo -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC1E1E1E"
        android:clickable="false" />

    <!-- ViewPager para deslizar páginas -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPages"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Áreas invisíveis para toque (esquerda e direita) -->
    <LinearLayout
        android:id="@+id/tapZones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Tap esquerdo (voltar página) -->
        <View
            android:id="@+id/leftTap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true" />

        <!-- Tap central (mostrar/ocultar menus) -->
        <View
            android:id="@+id/centerTap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true" />

        <!-- Tap direito (próxima página) -->
        <View
            android:id="@+id/rightTap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true" />
    </LinearLayout>

    <!-- Menu superior -->
    <LinearLayout
        android:id="@+id/menuSuperior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#CC1E1E1E"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tituloManga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Dandadan"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tituloCapitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter"
            android:text="É Assim Que o Amor Começa, Sabia?!"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Menu inferior -->
    <LinearLayout
        android:id="@+id/menuInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#CC1E1E1E"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/btnAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/contadorPaginas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="1/61"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnProxima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_next"
            android:tint="#FFFFFF" />
    </LinearLayout>
</FrameLayout>
